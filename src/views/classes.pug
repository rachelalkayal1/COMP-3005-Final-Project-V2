doctype html
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style
            include class.css
        body 
            h2 See All Classes
            div(class="column left", id="currentClasses")
                p Upcoming Classes 
                each gymClass in classes 
                    p ______________________________ 
                    p #{gymClass.classname}
                    p Description: #{gymClass.description}
                    p Date: #{gymClass.dateofclass}
                    p Time: #{gymClass.starttime} - #{gymClass.endtime}
                    p Duration: #{gymClass.duration}

            - let number = 0; 

            div(class="column middle")
                p                 
                p             

            div(class="column right" id="availableClasses")
                p Available Classes (each class has a charge of $20)
                each gymClass in allClasses.rows
                    p(id="nameofclass" + number) #{gymClass.classname}
                    p Description: #{gymClass.description}
                    p Date: #{gymClass.dateofclass}
                    p Time: #{gymClass.starttime} - #{gymClass.endtime}
                    p Duration: #{gymClass.duration}
                    button(id="enrollMember" onclick='enrollMember('+ number + ')') Enroll Into Class 
                    - number = number + 1

        script 
            include classes.js
