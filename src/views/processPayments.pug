doctype html
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style 
            include viewMemberProfile.css

        body 
            p Owed Payments
            each payment in allSessionPayment
                div(id="owedPayment")
                    p _____________________________________
                    p(id="owedMemberName") #{payment.memberfirstname} #{payment.memberlastname}
                    p(id="amountowed") Amount Owed: #{payment.paymentamount}
                    p(id="paid") Paid for Classes: #{payment.paidforclasses}
                    p Paid for Monthly Fee: #{payment.paidformonthly}
