doctype html
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        body 
            h2 Exercise Routine
            br
            div(id="exerciseInfo")
                p Enter Date Of Lift: #{dateOfLift}
                input(type="date", id="dateOfLift", name="dateOfLift", placeholder="Enter Date of Lift")
                br
                br
                br
                input(type="text", id="nameOfLift", name="nameOfLift", placeholder="Enter Name of Lift")
                br
                br
                p Select The Type Of Cardio You Did:
                select(id="cardio")
                    option(value="empty") 
                    option(value="Running") Running 
                    option(value="Walking") Walking
                    option(value="Swimming") Swimming 
                    option(value="None") No Cardio 
                br
                br
                p Cardio Duration: 
                label(for="duration") Minutes:
                input(type="number", id="duration", name="duration", min="0")
                br
                br
                br
                button(onclick="submit()") Submit!
                button(onclick="previousDate") Show Result Of Different Day
                //- p Calories Burned: #{caloriesBurned}
            div(id='previousLogs')
                each routine in previousLogs
                    p _____________________________________
                    p Date: #{routine.dateofexercise}
                    p Name Of Lift: #{routine.nameoflift}
                    p Cardio: #{routine.formofcardio}
                    p Duration: #{routine.duration}
                    p Total calories burned: #{routine.caloriesburned}
        
        script
            include exerciseRoutine.js  

